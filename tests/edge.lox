print "== precedence ==";
print 1 + 2 * 3 == 7;     // true  ( * binds tighter than +, == after )
print !(false == false);  // false (== before ! )

print "== dangling else (associates to nearest if) ==";
var x = 0;
if (true)
  if (false)
    x = 1;
  else
    x = 2;
print x;                  // 2

print "== chained if/else with blocks ==";
if (false) {
  print "no";
} else if (false) {
  print "no";
} else {
  print "yes";            // yes
}

print "== logical short-circuit (no side effects) ==";
var t = 0;
fun bump() { t = t + 1; print "bump"; }
false and bump();         // should NOT print "bump"
true or bump();           // should NOT print "bump"
print t;                  // 0
